<div id="photo_form" class="photo_form">
	<div id="photo_form_div" class="photo_form_div">
    <%= form_for(@photo) do |f| %>
    <div class="field"> 
			画像:<img src='<%= @photo.photo.url(:thumb) %>' /><br><br>
    </div>
    <%= f.label :title %>:<%= f.text_field :title %><br/>
		<%= f.label :description %>:<%= f.text_area :description %><br/>
		<%= f.label :album_id %>:<%=f.select "album_id", options_from_collection_for_select(@albums,"id","title") %>
    <div class="actions">
      <%= f.submit %>
    </div>
    <% end %>
  </div>
</div>
