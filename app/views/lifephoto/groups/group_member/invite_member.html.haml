#invite_form.photo_form
  #invite_form_div.photo_form_div
    = form_for @group_member, url: {action: 'invite'} do |f|
      - if @group_member.errors.any?
        #error_explanation
          %h2
            = pluralize(@group_member.errors.count, "error")
            prohibited this member from being saved:
          %ul
            - @group_member.errors.full_messages.each do |msg|
              %li= msg
      = f.label :e_mail
      \:#{f.text_field :e_mail}
      %br/
      アルバム選択：#{select_tag "album_id", options_from_collection_for_select(@albums,"id","title")}
      \#{hidden_field_tag :group_id, @group.id}
      .actions
        = f.submit
