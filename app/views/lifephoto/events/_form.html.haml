= form_for(@event, url: { action: "#{ @action }" } ) do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :start
    %br/
    = f.datetime_select :start
  .field
    = f.label :end
    %br/
    = f.datetime_select :end
  .field
    = f.label :color
    %br/
    = f.text_field :color
  .field
    = f.label :allDay
    %br/
    = f.check_box :allDay
  .actions
    = f.submit
