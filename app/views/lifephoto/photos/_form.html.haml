#photo_form.photo_form
  #photo_form_div.photo_form_div
    = form_for(@photo, url: { controller: 'lifephoto/photos', action: 'create'}  , :html => { :multipart => true }) do |f|
      .field
        画像:#{f.file_field :photo}
        %br/
        %br/
      = f.label :title
      \:#{f.text_field :title}
      %br/
      = f.label :description
      \:#{f.text_area :description, :size => "40x20"}
      %br/
      = f.label :album_id
      \:#{f.select "album_id", options_from_collection_for_select(@albums,"id","title")} &nbsp;&nbsp;| &nbsp;&nbsp;#{link_to 'アルバム作成', {controller: "lifephoto/albums", action: "new", from_url: 'photo'}}
      .actions
        = f.submit
