#photo_form.photo_form
  #photo_form_div.photo_form_div
    = form_for(@photo, url: { controller: 'lifephoto/photos' , action: 'update'} ) do |f|
      .field
        画像:
        %img{:src => @photo.photo.url(:thumb)}/
        %br/
        %br/
      = f.label :title
      \:#{f.text_field :title}
      %br/
      = f.label :description
      \:#{f.text_area :description}
      %br/
      = f.label :album_id
      \:#{f.select "album_id", options_from_collection_for_select(@albums,"id","title")}
      .actions
        = f.submit
