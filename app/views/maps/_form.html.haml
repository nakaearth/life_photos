= form_for(@map, url: {action: 'create', controller: 'maps' }) do |f|
  - if @map.errors.any?
    #error_explanation
      %h2
        = pluralize(@map.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @map.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :latitude
    %br/
    = f.text_field :latitude
  .field
    = f.label :longitude
    %br/
    = f.text_field :longitude
  .actions
    = f.submit
